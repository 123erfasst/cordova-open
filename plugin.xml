<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.bridge.open"
    version="0.0.1">
    <name>Open</name>
    <description>Open documents with compatible applications installed on the user's device.</description>
    <license>GPLv2</license>
    <keywords>cordova,file,open,intent</keywords>
    <repo>https://github.com/cordova-bridge/open</repo>
    <issue>https://github.com/cordova-bridge/open/issues</issue>

  <!-- www -->
  <js-module name="Open" src="www/bridge.open.js">
    <clobbers target="cordova.plugins.bridge"/>
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="BridgeOpen">
        <param name="android-package" value="com.bridge.open.BridgeOpen"/>
      </feature>
    </config-file>
    <config-file parent="/*" target="AndroidManifest.xml"/>
    <source-file src="src/android/BridgeOpen.java" target-dir="src/com/bridge/open/BridgeOpen"/>
  </platform>
</plugin>
